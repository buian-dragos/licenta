<!-- File: Views/MainWindow.axaml -->
<Window
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:code.ViewModels"
    x:Class="code.Views.MainWindow"
    x:DataType="vm:StartViewModel"
    Title="Raytracing: Cloud Rendering"
    Width="900"
    Height="600"
    MinWidth="1200"
    MinHeight="700"
    Background="#0F0F0F">

    <Design.DataContext>
        <vm:StartViewModel/>
    </Design.DataContext>
    
    <ContentControl Content="{Binding CurrentViewModel}" />
</Window>

