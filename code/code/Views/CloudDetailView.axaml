<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:code.ViewModels"
             mc:Ignorable="d"
             d:DesignWidth="1280" d:DesignHeight="720"
             x:Class="code.Views.CloudDetailView"
             x:DataType="vm:CloudDetailViewModel"
             Background="#0F0F0F">

    <Grid RowDefinitions="Auto,*,Auto" Margin="16">

        <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto">
            <Button Grid.Column="0"
                    Content="Back"
                    Command="{Binding NavigateBackCommand}"
                    Background="#222"
                    Foreground="White"
                    Padding="10,4"
                    Margin="0,8,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    CornerRadius="6"/>
            <TextBlock Grid.Column="1"
                       Text="{Binding CloudName}"
                       Foreground="White"
                       FontWeight="Bold"
                       FontSize="18"
                       HorizontalAlignment="Center"
                       Margin="0,16,0,0"/>
        </Grid>

        <Grid Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Stretch">
            <Panel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border Width="480"
                        Height="480"
                        Background="#2E2E2E"
                        CornerRadius="12"
                        ClipToBounds="True">
                    <Image Source="{Binding PreviewImage}" Stretch="Uniform"
                           HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image.RenderTransform>
                            <ScaleTransform ScaleX="{Binding ImageScale}" ScaleY="{Binding ImageScale}" />
                        </Image.RenderTransform>
                    </Image>
                </Border>

                <StackPanel Orientation="Horizontal" Spacing="8"
                            HorizontalAlignment="Right" VerticalAlignment="Bottom"
                            Margin="0,0,10,10">
                    <Button Content="-"
                            HorizontalContentAlignment="Center"
                            Command="{Binding ZoomOutCommand}"
                            Width="30" Height="30"
                            Background="#3A3A3A" Foreground="White"
                            CornerRadius="15" FontWeight="Bold"/>
                    <Button Content="+"
                            HorizontalContentAlignment="Center"
                            Command="{Binding ZoomInCommand}"
                            Width="30" Height="30"
                            Background="#3A3A3A" Foreground="White"
                            CornerRadius="15" FontWeight="Bold"/>
                </StackPanel>
            </Panel>

            <StackPanel VerticalAlignment="Center" 
                        HorizontalAlignment="Right"
                        Margin="0,0,32,0" 
                        Width="270">
                <TextBlock Text="Cloud Details"
                           FontWeight="SemiBold"
                           Foreground="White"
                           FontSize="14"
                           Margin="0,0,0,12"/>
                <StackPanel Spacing="2">
                    <TextBlock Text="Cloud type:" FontWeight="Bold" Foreground="#CCC" FontSize="13"/>
                    <TextBlock Text="{Binding CloudType}" Foreground="White" FontSize="13"/>
                    <TextBlock Text="Altitude:" FontWeight="Bold" Foreground="#CCC" FontSize="13" Margin="0,8,0,0"/>
                    <TextBlock Text="{Binding Altitude}" Foreground="White" FontSize="13"/>
                    <TextBlock Text="Pressure:" FontWeight="Bold" Foreground="#CCC" FontSize="13" Margin="0,8,0,0"/>
                    <TextBlock Text="{Binding Pressure}" Foreground="White" FontSize="13"/>
                    <TextBlock Text="Humidity:" FontWeight="Bold" Foreground="#CCC" FontSize="13" Margin="0,8,0,0"/>
                    <TextBlock Text="{Binding Humidity}" Foreground="White" FontSize="13"/>
                    <TextBlock Text="Temperature:" FontWeight="Bold" Foreground="#CCC" FontSize="13" Margin="0,8,0,0"/>
                    <TextBlock Text="{Binding Temperature}" Foreground="White" FontSize="13"/>
                    <TextBlock Text="Wind speed:" FontWeight="Bold" Foreground="#CCC" FontSize="13" Margin="0,8,0,0"/>
                    <TextBlock Text="{Binding WindSpeed}" Foreground="White" FontSize="13"/>
                </StackPanel>
                <TextBlock Text="Technical details" FontWeight="SemiBold" Foreground="White" FontSize="14" Margin="0,24,0,12"/>
                <StackPanel Spacing="2">
                    <TextBlock Text="Render engine:" FontWeight="Bold" Foreground="#CCC" FontSize="13"/>
                    <TextBlock Text="{Binding RenderEngine}" Foreground="White" FontSize="13"/>
                    <TextBlock Text="Rendering Preset:" FontWeight="Bold" Foreground="#CCC" FontSize="13" Margin="0,8,0,0"/>
                    <TextBlock Text="{Binding RenderingPreset}" Foreground="White" FontSize="13"/>
                    <TextBlock Text="Created at:" FontWeight="Bold" Foreground="#CCC" FontSize="13" Margin="0,8,0,0"/>
                    <TextBlock Text="{Binding CreatedAt}" Foreground="White" FontSize="13"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="2" Margin="0,20,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.125*"/>
                <ColumnDefinition Width="0.75*"/>
                <ColumnDefinition Width="0.125*"/>
            </Grid.ColumnDefinitions>
            <Slider Grid.Column="1"
                    Minimum="0"
                    Maximum="{Binding MaxFrameIndex}"
                    Value="{Binding CurrentFrameIndex, Mode=TwoWay}"
                    IsVisible="{Binding IsFrameSliderVisible}"
                    TickFrequency="1"
                    IsSnapToTickEnabled="True"
                    Background="#2E2E2E" 
                    CornerRadius="6"    
                    HorizontalAlignment="Stretch" />
        </Grid>
    </Grid>
</UserControl>
